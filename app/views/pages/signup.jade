extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h2 create an account
        form(method="POST", action="/user/signup")
          .form-group
            label(for="inputUsername") username
            input#inputUsername.form-control(name="user[username]", type="text")
          .form-group
            label(for="inputPassword") password
            input#inputPassword.form-control(name="user[password]", type="password")
          .form-group
            label(for="inputPasswordRepeat") verify password
            input#inputPasswordRepeat.form-control(name="passwordRepeat", type="password")
          .form-group
            label(for="inputEmail") email address
            input#inputEmail.form-control(name="user[email]", type="email")
          button.btn.btn-primary.btn-block(type="submit") sign up