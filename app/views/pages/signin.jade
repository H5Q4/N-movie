extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h2 sign in
        form(method="POST", action="/user/signin")
          .form-group
            label(for="inputUsername") username
            input#inputUsername.form-control(name="user[username]", type="text")
          .form-group
            label(for="inputPassword") password
            input#inputPassword.form-control(name="user[password]", type="password")
          button.btn.btn-primary.btn-block(type="submit") sign in